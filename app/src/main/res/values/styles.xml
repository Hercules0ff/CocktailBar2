<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainLinearLayoutStyle">
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="app_title">
        <item name="fontFamily">@font/didactgothic_regular</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black_1</item>
    </style>
    <style name="create_cocktail" parent="app_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="RoundedFAB">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="cocktail_name" parent="create_cocktail">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>